extends dashboard

block primary
  .pb-2.mt-2.mb-4.border-bottom
    form(action='/account/profile', method='POST')
      input(type='hidden', name='_csrf', value=_csrf)
      .panel.panel-default.border
        .panel-heading
           br
           h3 Profile Information

        .panel-body.justify
          .form-group.row 
            .container
              .col-md-7
                .form-group
                  label.col-md-3.col-form-label.font-weight-bold.text-right(for='imgInp') Upload Image
                  .input-group
                    span.input-group-btn
                      span.btn.btn-default.btn-file
                        | Browseâ€¦ 
                        input#imgInp(type='file')
                    input.form-control(readonly='', type='text')
                  img#img-upload

          .form-group.row
            label.col-md-3.col-form-label.font-weight-bold.text-right(for='email') Email
            .col-md-7
              input.form-control(type='email', name='email', id='email', value=user.email)
          .form-group.row
            label.col-md-3.col-form-label.font-weight-bold.text-right(for='address') Home Address
            .col-md-7
              input.form-control(type='text', name='address', id='address', value=user.profile.address)
          .form-group.row
            label.col-md-3.col-form-label.font-weight-bold.text-right(for='name') Name
            .col-md-7
              input.form-control(type='text', name='name', id='name', value=user.profile.name)
          .form-group.row
            label.col-md-3.col-form-label.font-weight-bold.text-right Gender
            .col-sm-6
              label.radio.col-sm-3
                input(type='radio', checked=user.profile.gender=='male', name='gender', value='male', data-toggle='radio')
                span Male
              label.radio.col-sm-3
                input(type='radio', checked=user.profile.gender=='female', name='gender', value='female', data-toggle='radio')
                span Female
              label.radio.col-sm-3
                input(type='radio', checked=user.profile.gender=='other', name='gender', value='other', data-toggle='radio')
                span Other
          .form-group.row
            label.col-md-3.col-form-label.font-weight-bold.text-right(for='parent1') Parent1
            .col-md-7
              input.form-control(type='text', name='parent1', id='parent1', value=user.profile.parent1)
          .br 

          .form-group.row
            label.col-md-3.col-form-label.font-weight-bold.text-right(for='familyrole1') Family Role :
            .col
              .form-group
              .custom-control.custom-radio
                input#familyRole1.custom-control-input(name='familyRole1', type='radio')
                label.custom-control-label(for='familyRole1') Mother
              .custom-control.custom-radio
                input#familyRole1.custom-control-input(name='familyRole1', checked='', type='radio')
                label.custom-control-label(for='familyRole1') Father
              .custom-control.custom-radio
                input#familyRole1.custom-control-input(name='familyRole1', type='radio')
                label.custom-control-label(for='familyRole1') Grandmother
              .custom-control.custom-radio
                input#familyRole1.custom-control-input(name='familyRole1', type='radio')
                label.custom-control-label(for='familyRole1') Grandfather


          
          .form-group.row
            label.col-md-3.col-form-label.font-weight-bold.text-right(for='parent2') Parent2
            .col
              input.form-control(type='text', name='parent2', id='parent2', value=user.profile.parent2)
          .form-group.row
            label.col-md-3.col-form-label.font-weight-bold.text-right(for='familyrole2') Family Role :
            .col
              .form-group
              .custom-control.custom-radio
                input#familyRole1.custom-control-input(name='familyRole2', type='radio')
                label.custom-control-label(for='familyRole2') Mother
              .custom-control.custom-radio
                input#familyRole1.custom-control-input(name='familyRole2', checked='', type='radio')
                label.custom-control-label(for='familyRole2') Father
              .custom-control.custom-radio
                input#familyRole1.custom-control-input(name='familyRole2', type='radio')
                label.custom-control-label(for='familyRole2') Grandmother
              .custom-control.custom-radio
                input#familyRole1.custom-control-input(name='familyRole2', type='radio')
                label.custom-control-label(for='familyRole2') Grandfather
          .br 
          
          .form-group.row
            label.col-md-3.col-form-label.font-weight-bold.text-right(for='careagesrequired') Caree Age Group
            .col-lg-7
              .form-group
                select.selectpicker#careagesrequired.form-control(name='careagesrequired[]',multiple="multiple", style="height:auto;")
                  option 0-12 months 
                  option 1-2 years 
                  option 2-3 years 
                  option 3-4 years 
                  option 5+ years 
          .form-group.row
            label.col-md-3.col-form-label.font-weight-bold.text-right(for='numkids1') Number of kids
            .col-lg-7
              .form-group
                  p 0-12 months 
                    input.form-control(type='text', name='numkids1', id='numkids1', value=user.profile.numkids1)
                  p 1-2 years 
                    input.form-control(type='text', name='numkids2', id='numkids2', value=user.profile.numkids2)
                  p 2-3 years 
                    input.form-control(type='text', name='numkids3', id='numkids3', value=user.profile.numkids3)
                  p 3-4 years 
                    input.form-control(type='text', name='numkids4', id='numkids4', value=user.profile.numkids4)
                  p 5+ years 
                    input.form-control(type='text', name='numkids5', id='numkids5', value=user.profile.numkids5)

          .br 

          .form-group.row
            label.col-md-3.col-form-label.font-weight-bold.text-right(for='yourstory') Your Story
            .col-md-7
              input.form-control(type='text', name='yourstory', id='yourstory', value=user.profile.yourstory)

          .form-group.row
            label.col-md-3.col-form-label.font-weight-bold.text-right(for='idealcarer') Ideal Carer
            .col-md-7
              input.form-control(type='text', name='idealcarer', id='idealcarer', value=user.profile.idealcarer)

          .form-group.row
            label.col-md-3.col-form-label.font-weight-bold.text-right(for='idealjob') Ideal Job
            .col-md-7
              input.form-control(type='text', name='idealjob', id='idealjob', value=user.profile.idealjob)
                  
          .form-group.row
            label.col-md-3.col-form-label.font-weight-bold.text-right(for='location') Location
            .col-md-7
              input.form-control(type='text', name='location', id='location', value=user.profile.location)
          .form-group.row
            label.col-md-3.col-form-label.font-weight-bold.text-right(for='website') Website
            .col-md-7
              input.form-control(type='text', name='website', id='website', value=user.profile.website)
          .form-group.row
            label.col-md-3.col-form-label.font-weight-bold.text-right Gravatar
            .col-sm-4
              img(src=user.gravatar(), class='profile', width='100', height='100')
          .form-group
            .offset-sm-3.col-md-7.pl-2
              button.btn.btn.btn-primary(type='submit')
                i.fas.fa-pencil-alt.fa-sm
                | Update Profile
    .panel.panel-default.border
      .panel-heading
         br
         h3 Verification
      .panel-body.justify
        p Improve your profile in seconds 
        br 
        p We recommend verifying your account because it helps improve your reputation with FamilyBee, ensures you are visible tin search results providing you many more congruent job opportunities.

        .btn-group
          button.btn.btn-primary(type='button') PHOTO CHECK
          button.btn.btn-primary(type='button') RESUME CHECK
          button.btn.btn-primary(type='button') REFERENCE CHECK
          button.btn.btn-primary(type='button') POLICE CHECK
          button.btn.btn-primary(type='button') WWC CHECK
          button.btn.btn-primary(type='button') EDUCATION CHECK



    .pb-2.mt-2.mb-4.border-bottom
      h3 Change Password

    form(action='/account/password', method='POST')
      input(type='hidden', name='_csrf', value=_csrf)
      .form-group.row
        label.col-md-3.col-form-label.font-weight-bold.text-right(for='password') New Password
        .col-md-7
          input.form-control(type='password', name='password', id='password')
      .form-group.row
        label.col-md-3.col-form-label.font-weight-bold.text-right(for='confirmPassword') Confirm Password
        .col-md-7
          input.form-control(type='password', name='confirmPassword', id='confirmPassword')
      .form-group
        .offset-sm-3.col-md-7.pl-2
          button.btn.btn-primary(type='submit')
            i.fas.fa-lock.fa-sm
            | Change Password

    .pb-2.mt-2.mb-4.border-bottom
      h3 Delete Account

    form(action='/account/delete', method='POST', onsubmit="return confirm('Are you sure you want to delete your account?');")
      .form-group
        p.offset-sm-3.col-md-7.pl-2 You can delete your account, but keep in mind this action is irreversible.
        input(type='hidden', name='_csrf', value=_csrf)
        .offset-sm-3.col-md-7.pl-2
          button.btn.btn-danger(type='submit')
            i.fas.fa-trash-alt.fa-sm
            | Delete my account

    .pb-2.mt-2.mb-4.border-bottom
      h3 Linked Accounts
    .form-group
      .offset-sm-3.col-md-7.pl-2
        if user.instagram
          p.mb-1: a.text-danger(href='/account/unlink/instagram') Unlink your Instagram account
        else
          p.mb-1: a(href='/auth/instagram') Link your Instagram account
      .offset-sm-3.col-md-7.pl-2
        if user.google
          p.mb-1: a.text-danger(href='/account/unlink/google') Unlink your Google account
        else
          p.mb-1: a(href='/auth/google') Link your Google account
      .offset-sm-3.col-md-7.pl-2
        if user.facebook
          p.mb-1: a.text-danger(href='/account/unlink/facebook') Unlink your Facebook account
        else
          p.mb-1: a(href='/auth/facebook') Link your Facebook account
      .offset-sm-3.col-md-7.pl-2
        if user.twitter
          p.mb-1: a.text-danger(href='/account/unlink/twitter') Unlink your Twitter account
        else
          p.mb-1: a(href='/auth/twitter') Link your Twitter account
      .offset-sm-3.col-md-7.pl-2
        if user.github
          p.mb-1: a.text-danger(href='/account/unlink/github') Unlink your GitHub account
        else
          p.mb-1: a(href='/auth/github') Link your GitHub account
      .offset-sm-3.col-md-7.pl-2
        if user.linkedin
          p.mb-1: a.text-danger(href='/account/unlink/linkedin') Unlink your LinkedIn account
        else
          p.mb-1: a(href='/auth/linkedin') Link your LinkedIn account
      .offset-sm-3.col-md-7.pl-2
        if user.steam
          p.mb-1: a.text-danger(href='/account/unlink/steam') Unlink your Steam account
        else
          p.mb-1: a(href='/auth/steam') Link your Steam account


    .pb-2.mt-2.mb-4.border-bottom
      h3 Family Needs
      .form-group
        b Availability
        .row
          .column
            table.table
              thead
                tr
                  th(scope='col') #
                  th(scope='col') First
                  th(scope='col') Last
                  th(scope='col') Handle
              tbody
                tr
                  th(scope='row') 1
                  td Mark
                  td Otto
                  td @mdo
                tr
                  th(scope='row') 2
                  td Jacob
                  td Thornton
                  td @fat
                tr
                  th(scope='row') 3
                  td Larry
                  td the Bird
                  td @twitter
          .column
            b Responsibilities
            ul.list-group
              li.list-group-item.list-group-item-success First item
              li.list-group-item.list-group-item-info Second item
              li.list-group-item.list-group-item-warning Third item
              li.list-group-item.list-group-item-danger Fourth item
